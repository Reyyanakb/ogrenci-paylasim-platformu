@{
    ViewData["Title"] = "Yetkili Girişi";
}

<div class="container section-padding">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card-custom p-4 p-md-5 border-danger">
                <div class="text-center mb-4">
                    <i class="bi bi-shield-lock-fill text-danger display-4"></i>
                    <h2 class="mt-2 fw-bold text-danger">Yetkili Girişi</h2>
                    <p class="text-muted small">Sadece sistem yöneticileri giriş yapabilir.</p>
                </div>
                
                <form method="post" asp-action="AdminLogin">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Error
                        </div>
                    }
                    <div class="mb-3">
                        <label class="form-label fw-bold small">Yönetici E-posta</label>
                        <input type="email" name="email" class="form-control form-control-custom border-danger" placeholder="admin@example.com" required>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label fw-bold small">Şifre</label>
                        <input type="password" name="password" class="form-control form-control-custom border-danger" placeholder="••••••••" required>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                         <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe">
                            <label class="form-check-label small" for="rememberMe">Beni Hatırla</label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-danger w-100 mb-3 shadow-sm">Güvenli Giriş Yap</button>
                    
                    <div class="text-center">
                        <p class="small text-muted"><a href="/Account/Login" class="fw-bold text-muted"><i class="bi bi-arrow-left"></i> Kullanıcı Girişine Dön</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
