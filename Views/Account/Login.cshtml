@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container section-padding">
    <div class="row justify-content-center">
        <div class="col-md-5 position-relative login-card-container">
            <!-- 3D Character Image (Floating) -->
            <img src="~/images/login-character.png" alt="Student Character" class="login-character d-none d-lg-block">
            
            <div class="card-custom p-4 p-md-5 animate-form-card position-relative" style="z-index: 2;">
                <h2 class="text-center mb-4 auth-header-animate">Hoş Geldin</h2>
                <form method="post" asp-action="Login">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger animate-input-group">@ViewBag.Error</div>
                    }
                    <div class="mb-3 animate-input-group">
                        <label class="form-label fw-bold small">E-posta Adresi</label>
                        <input type="email" name="email" class="form-control form-control-custom" placeholder="E-posta adresiniz" required>
                    </div>
                    
                    <div class="mb-4 animate-input-group">
                        <label class="form-label fw-bold small">Şifre</label>
                        <input type="password" name="password" class="form-control form-control-custom" placeholder="••••••••" required>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4 animate-input-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe">
                            <label class="form-check-label small" for="rememberMe">Beni Hatırla</label>
                        </div>
                        <a href="#" class="small text-muted">Şifremi Unuttum</a>
                    </div>

                    <button type="submit" class="btn btn-primary-custom w-100 mb-3 animate-input-group">Giriş Yap</button>
                    
                    <div class="text-center animate-input-group">
                        <p class="small text-muted mb-2">Hesabın yok mu? <a href="/Account/Register" class="fw-bold text-dark">Kayıt Ol</a></p>
                        <a href="/Account/AdminLogin" class="small text-muted"><i class="bi bi-shield-lock"></i> Yetkili Giriş</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
