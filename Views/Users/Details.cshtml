@model mvcFinal2.Models.AppUser
@{
    ViewData["Title"] = Model.FullName;
}

<div class="container section-padding">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-custom p-5">
                <div class="text-center mb-4">
                     <div class="d-inline-flex align-items-center justify-content-center bg-light rounded-circle mb-3" style="width: 120px; height: 120px; overflow: hidden;">
                        @if (Model.ProfileImage != null && Model.ProfileImage.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfileImage)" class="w-100 h-100" style="object-fit: cover;" alt="@Model.FullName">
                        }
                        else if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                        {
                            <img src="@Model.ProfileImageUrl" class="w-100 h-100" style="object-fit: cover;" alt="@Model.FullName">
                        }
                        else
                        {
                            <i class="bi bi-person-fill text-warning display-2"></i>
                        }
                    </div>
                    <h2 class="fw-bold mb-1">@Model.FullName</h2>
                    
                    <!-- Clickable Rating Badge -->
                    <a href="#reviews-section" class="text-decoration-none" title="Deƒüerlendirmeleri G√∂r">
                        <div class="d-inline-flex align-items-center gap-1 mb-2 mt-1 px-3 py-1 rounded-pill bg-light border transition-hover">
                            <span class="fw-bold text-dark">@Model.AverageRating.ToString("0.0")</span>
                            <i class="bi bi-star-fill text-warning"></i>
                            <span class="text-muted small ms-1">(@Model.ReviewCount deƒüerlendirme)</span>
                        </div>
                    </a>

                    <p class="text-muted fs-5">@(Model.University ?? "-")</p>
                    
                    <div class="d-flex justify-content-center gap-3 mt-3">
                         <span class="badge bg-warning text-dark px-3 py-2 border-0">@Model.UserType</span>
                         @if(!string.IsNullOrEmpty(Model.City))
                         {
                             <span class="badge bg-light border text-dark px-3 py-2">
                                 <i class="bi bi-geo-alt-fill text-warning"></i> @Model.City
                             </span>
                         }
                    </div>
                </div>

                <div class="row mt-5">
                    <div class="col-md-6 mb-3">
                        <div class="p-4 bg-light rounded-3 h-100">
                             <h6 class="text-muted text-uppercase small fw-bold mb-3">ƒ∞leti≈üim</h6>
                             <div class="d-flex align-items-center gap-3">
                                 <div class="rounded-circle bg-white p-2 border">
                                     <i class="bi bi-envelope fs-5"></i>
                                 </div>
                                 <div class="text-truncate" style="max-width: 100%;">
                                     <div class="small text-muted">E-posta Adresi</div>
                                     <div class="fw-bold text-truncate">@Model.Email</div>
                                 </div>
                             </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="p-4 bg-light rounded-3 h-100">
                             <h6 class="text-muted text-uppercase small fw-bold mb-3">√úyelik</h6>
                             <div class="d-flex align-items-center gap-3">
                                 <div class="rounded-circle bg-white p-2 border">
                                     <i class="bi bi-calendar-check fs-5"></i>
                                 </div>
                                 <div>
                                     <div class="small text-muted">Kayƒ±t Tarihi</div>
                                     <div class="fw-bold">@Model.CreatedAt.ToString("d MMMM yyyy")</div>
                                 </div>
                             </div>
                        </div>
                    </div>
                </div>

                <!-- Reviews Section -->
                <div class="row mt-5" id="reviews-section">
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-4 ps-1 border-start border-4 border-warning">
                            <h5 class="fw-bold mb-0 me-3">&nbsp;Deƒüerlendirmeler</h5>
                            <div class="d-flex align-items-center text-warning fs-5">
                                <span class="fw-bold text-dark me-2">@Model.AverageRating.ToString("0.0")</span>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Round(Model.AverageRating))
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star text-muted op-25"></i>
                                    }
                                }
                                <span class="text-muted small ms-2 fs-6">(@Model.ReviewCount)</span>
                            </div>
                        </div>

                        @if (Model.ReviewsReceived != null && Model.ReviewsReceived.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var review in Model.ReviewsReceived.OrderByDescending(r => r.CreatedAt))
                                {
                                    <div class="list-group-item border-0 bg-light rounded-3 mb-3 p-3">
                                        <div class="d-flex justify-content-between">
                                            <div class="d-flex align-items-center gap-2 mb-2">
                                                 @if (review.Reviewer?.ProfileImage != null && review.Reviewer.ProfileImage.Length > 0)
                                                {
                                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(review.Reviewer.ProfileImage)" class="rounded-circle" style="width: 32px; height: 32px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                     <img src="https://via.placeholder.com/32" class="rounded-circle" style="width: 32px; height: 32px; object-fit: cover;">
                                                }
                                                <span class="fw-bold small">@(review.Reviewer?.FullName ?? "Anonim")</span>
                                                <small class="text-muted ms-2">@review.CreatedAt.ToString("dd MMM yyyy")</small>
                                            </div>
                                            <div class="text-warning small">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= review.Rating)
                                                    {
                                                        <i class="bi bi-star-fill"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star text-secondary"></i>
                                                    }
                                                }
                                            </div>
                                        </div>
                                        <p class="mb-0 text-muted small">@review.Comment</p>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-light text-center border-0 small text-muted">
                                Hen√ºz deƒüerlendirme yapƒ±lmamƒ±≈ü.
                            </div>
                        }
                    </div>
                </div>

                <!-- User Listings Section -->
                <div class="mt-5">
                    <h5 class="fw-bold mb-4 ps-1 border-start border-4 border-warning">&nbsp;@Model.FullName'in ƒ∞lanlarƒ±</h5>
                    
                    @if (Model.Listings != null && Model.Listings.Any(l => l.IsApproved))
                    {
                        <div class="row g-3">
                            @foreach (var listing in Model.Listings.Where(l => l.IsApproved).OrderByDescending(l => l.CreatedAt))
                            {
                                <div class="col-md-6">
                                    <div class="card h-100 border rounded-3 shadow-sm">
                                        <div class="position-relative">
                                            @if (!string.IsNullOrEmpty(listing.ImageUrl))
                                            {
                                                <img src="@listing.ImageUrl" class="card-img-top" alt="@listing.Title" style="height: 160px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="bg-light d-flex align-items-center justify-content-center text-muted" style="height: 160px;">
                                                    <i class="bi bi-image fs-1"></i>
                                                </div>
                                            }
                                            <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2 small">
                                                @(listing.Type == "Room" ? "üè† Oda" : "üì¶ E≈üya")
                                            </span>
                                        </div>
                                        <div class="card-body">
                                            <h6 class="card-title fw-bold text-truncate">@listing.Title</h6>
                                            <p class="card-text small text-muted text-truncate mb-2">
                                                <i class="bi bi-geo-alt-fill text-warning"></i> @listing.Location
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center mt-2">
                                                <span class="fw-bold small text-dark">@(listing.Price == 0 ? "√úcretsiz" : "‚Ç∫" + listing.Price.ToString("N0"))</span>
                                                <a href="/Listings/Details/@listing.Id" class="btn btn-sm btn-outline-dark rounded-pill">ƒ∞ncele</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                         <div class="alert alert-light text-center border-0 small text-muted">
                            Bu kullanƒ±cƒ±nƒ±n hen√ºz aktif ilanƒ± bulunmuyor.
                        </div>
                    }
                </div>

                <div class="mt-5 text-center">

                    <br>
                    <a asp-action="Index" class="btn btn-link text-decoration-none text-muted">
                        <i class="bi bi-arrow-left"></i> Listeye D√∂n
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
