@model mvcFinal2.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Mesajlarım";
}

<div class="container section-padding">
    <div class="row">
        <!-- Sidebar Menu -->
        <partial name="_DashboardSidebar" model="Model" />

        <!-- Main Content Area -->
        <div class="col-md-9">
            <div class="card-custom h-100 overflow-hidden" style="min-height: 600px;">
                <div class="row g-0 h-100">
                    
                    <!-- Conversations List (Left Side) -->
                    <div class="col-md-4 border-end bg-light d-flex flex-column h-100">
                        <div class="p-3 border-bottom bg-white">
                            <h5 class="fw-bold mb-0">Sohbetler</h5>
                        </div>
                        
                        <div class="overflow-auto flex-grow-1" style="max-height: 550px;">
                            @if (Model.Conversations.Any())
                            {
                                <div class="list-group list-group-flush">
                                    @foreach (var user in Model.Conversations)
                                    {
                                        var isActive = Model.CurrentReceiver != null && Model.CurrentReceiver.Id == user.Id;
                                        <a href="/Dashboard/Messages?receiverId=@user.Id" class="list-group-item list-group-item-action p-3 border-bottom @(isActive ? "bg-white border-start border-4 border-warning" : "bg-light")">
                                            <div class="d-flex align-items-center">
                                                <div class="d-inline-flex align-items-center justify-content-center bg-white border rounded-circle me-3 flex-shrink-0" style="width: 45px; height: 45px;">
                                                    <i class="bi bi-person-fill text-warning fs-5"></i>
                                                </div>
                                                <div class="overflow-hidden">
                                                    <h6 class="fw-bold mb-1 text-truncate">@user.FullName</h6>
                                                    <small class="text-muted d-block text-truncate">@user.University</small>
                                                </div>
                                            </div>
                                        </a>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center p-4">
                                    <p class="text-muted small">Henüz mesajlaşma geçmişiniz yok.</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Active Chat (Right Side) -->
                    <div class="col-md-8 d-flex flex-column h-100 bg-white">
                        @if (Model.CurrentReceiver != null)
                        {
                            <!-- Chat Header -->
                            <div class="p-3 border-bottom d-flex align-items-center justify-content-between bg-white">
                                <div class="d-flex align-items-center">
                                     <div class="d-inline-flex align-items-center justify-content-center bg-light rounded-circle me-3" style="width: 40px; height: 40px;">
                                        <i class="bi bi-person-fill text-warning fs-5"></i>
                                    </div>
                                    <div>
                                        <h6 class="fw-bold mb-0">@Model.CurrentReceiver.FullName</h6>
                                        <small class="text-muted">@Model.CurrentReceiver.University</small>
                                    </div>
                                </div>
                                <a asp-action="Index" class="btn btn-sm btn-outline-light text-muted border-0"><i class="bi bi-x-lg"></i></a>
                            </div>

                            <!-- Chat Messages -->
                            <div class="p-4 flex-grow-1 overflow-auto" id="chatArea" style="background-color: #f9f9f9; max-height: 450px;">
                                @if (Model.CurrentChatMessages.Any())
                                {
                                    foreach (var message in Model.CurrentChatMessages)
                                    {
                                        if (message.IsSystemMessage)
                                        {
                                             <div class="d-flex justify-content-center mb-3">
                                                 <div class="bg-white border rounded-3 px-4 py-3 text-center text-secondary shadow-sm" style="max-width: 85%; font-size: 0.9rem;">
                                                     <i class="bi bi-shield-check text-success fs-5 mb-1 d-block"></i>
                                                     <strong>Sistem Mesajı</strong><br>
                                                     @Html.Raw(message.Content)
                                                     <div class="text-muted mt-1" style="font-size: 0.7rem;">@message.SentAt.ToString("g")</div>
                                                 </div>
                                            </div>
                                        }
                                        else
                                        {
                                            var isMe = message.SenderId == Model.CurrentUserId;
                                            <div class="d-flex @(isMe ? "justify-content-end" : "justify-content-start") mb-3">
                                                <div style="max-width: 75%;">
                                                    <div class="p-3 rounded-3 @(isMe ? "text-dark" : "bg-white border shadow-sm")" 
                                                         style="@(isMe ? "background-color: #fdf2ce; border-bottom-right-radius: 4px;" : "border-bottom-left-radius: 4px;")">
                                                        <p class="mb-1">@message.Content</p>
                                                    </div>
                                                    <div class="d-flex align-items-center gap-1 mt-1 @(isMe ? "justify-content-end" : "")">
                                                         <small class="text-muted" style="font-size: 0.7rem;">@message.SentAt.ToString("HH:mm")</small>
                                                         @if(isMe)
                                                         {
                                                             <i class="bi @(message.IsRead ? "bi-check-all text-primary" : "bi-check")" style="font-size: 0.8rem;"></i>
                                                         }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                }
                                else
                                {
                                    <div class="text-center text-muted h-100 d-flex flex-column justify-content-center">
                                        <i class="bi bi-chat-dots fs-1 mb-2"></i>
                                        <p>Sohbeti başlatın!</p>
                                    </div>
                                }
                            </div>

                            <!-- Input Area -->
                            <div class="p-3 border-top bg-white mt-auto">
                                <form asp-action="SendMessage" method="post" class="d-flex gap-2">
                                    <input type="hidden" name="receiverId" value="@Model.CurrentReceiver.Id" />
                                    <input type="text" name="content" class="form-control form-control-custom bg-light border-0" placeholder="Mesajınızı yazın..." required autocomplete="off">
                                    <button type="submit" class="btn btn-warning text-dark px-4 rounded-3">
                                        <i class="bi bi-send-fill"></i>
                                    </button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <!-- Empty State -->
                            <div class="h-100 d-flex flex-column align-items-center justify-content-center text-center p-5 text-muted">
                                <div class="bg-light rounded-circle p-4 mb-3">
                                    <i class="bi bi-chat-square-text fs-1 text-warning"></i>
                                </div>
                                <h5>Bir sohbet seçin</h5>
                                <p>Mesajlaşmaya başlamak için soldaki listeden bir arkadaşınızı seçin.</p>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Scroll to bottom of chat automatically
    document.addEventListener("DOMContentLoaded", function() {
        var chatArea = document.getElementById("chatArea");
        if(chatArea) {
            chatArea.scrollTop = chatArea.scrollHeight;
        }
    });
</script>
