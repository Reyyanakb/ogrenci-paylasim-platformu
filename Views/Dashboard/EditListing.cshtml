@model mvcFinal2.Models.Listing

@{
    ViewData["Title"] = "İlanı Düzenle";
}

<div class="container section-padding">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-custom p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-bold mb-0">İlanı Düzenle</h3>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left"></i> Geri Dön</a>
                </div>
                
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <form asp-action="EditListing" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImageUrl" />
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">İlan Başlığı</label>
                        <input asp-for="Title" class="form-control form-control-custom" required>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Kategori</label>
                            <select asp-for="Type" class="form-select form-control-custom">
                                <option value="Room">Kiralık Oda</option>
                                <option value="Item">İkinci El Eşya</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Konum</label>
                            <input asp-for="Location" class="form-control form-control-custom" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Fiyat (₺)</label>
                        <input asp-for="Price" type="number" class="form-control form-control-custom" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Açıklama</label>
                        <textarea asp-for="Description" class="form-control form-control-custom" rows="5" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mevcut Fotoğraf</label>
                        <div class="mb-2">
                             @if (!string.IsNullOrEmpty(Model.ImageUrl))
                             {
                                 <img src="@Model.ImageUrl" alt="Listing Image" class="img-thumbnail" style="max-height: 150px;">
                             }
                             else
                             {
                                 <p class="text-muted small">Fotoğraf yok</p>
                             }
                        </div>
                        <label class="form-label fw-bold">Yeni Fotoğraf Yükle (Değiştirmek isterseniz)</label>
                        <input type="file" name="imageFile" class="form-control form-control-custom" accept="image/*">
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary-custom">Değişiklikleri Kaydet</button>
                        <a asp-action="Index" class="btn btn-light border">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
