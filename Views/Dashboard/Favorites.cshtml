@model mvcFinal2.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Favorilerim";
}

<div class="container section-padding">
    <div class="row">
        <!-- Sidebar Menu -->
        <partial name="_DashboardSidebar" model="Model" />

        <!-- Main Content Area -->
        <div class="col-md-9">
             <div class="card-custom">
                 <div class="p-4 border-bottom bg-light">
                     <h5 class="fw-bold mb-0">Favorilerim (@Model.FavoritesCount)</h5>
                 </div>

                <div class="p-4">
                    @if (Model.Favorites.Any())
                    {
                        <div class="row g-4">
                            @foreach (var item in Model.Favorites)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 border-0 shadow-sm card-hover">
                                        <div class="position-relative">
                                            <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-3 z-index-1">
                                                @(item.Type == "Room" ? "Kiralık Oda" : "Eşya")
                                            </span>
                                            
                                            <!-- Favorite Button (Active) -->
                                            <form asp-controller="Dashboard" asp-action="ToggleFavorite" method="post" class="position-absolute top-0 end-0 m-3 z-index-1">
                                                <input type="hidden" name="listingId" value="@item.Id" />
                                                <button type="submit" class="btn btn-light rounded-circle shadow-sm p-0 d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                                    <i class="bi bi-heart-fill text-danger"></i>
                                                </button>
                                            </form>
                                            
                                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title fw-bold text-truncate">@item.Title</h5>
                                            <p class="card-text text-muted small mb-2"><i class="bi bi-geo-alt-fill text-warning"></i> @item.Location</p>
                                            <div class="d-flex justify-content-between align-items-center mt-3">
                                                <h6 class="fw-bold text-primary mb-0">@(item.Price == 0 ? "Ücretsiz" : "₺" + item.Price.ToString("N0"))</h6>
                                                <a href="/Listings/Details/@item.Id" class="btn btn-sm btn-outline-primary">İncele</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-5">
                            <i class="bi bi-heart-break text-muted display-4 mb-3"></i>
                            <p class="text-muted">Henüz favori ilanınız yok.</p>
                            <a href="/Listings" class="btn btn-outline-primary btn-sm rounded-pill">İlanları Keşfet</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
